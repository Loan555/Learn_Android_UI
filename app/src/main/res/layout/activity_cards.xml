<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ground"
    tools:context=".ThreeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:background="@drawable/banner"
            android:paddingLeft="18dp"
            android:paddingTop="36dp"
            android:paddingRight="17dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backspack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:background="@color/bt"
                android:src="@drawable/backspack_whitle" />

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/backspack"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Cuentas bancarias y tarjetas "
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:fontFamily="@font/montserrat_semibold"
                android:lineSpacingExtra="6sp"
                android:text="Mantenemos tus datos financieros protegidos para que nadie vea la información confidencial."
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/black_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="103dp"
            android:src="@drawable/card_black"
            app:layout_constraintBottom_toBottomOf="@+id/banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintVertical_bias="0.604" />

        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/black_card">


            <TextView
                android:id="@+id/tite_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Mis tarjetas"
                android:textColor="#001d50"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="384dp" />


            <RelativeLayout
                android:id="@+id/row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tite_1"
                android:layout_marginBottom="16dp"
                android:background="@drawable/list_price"
                android:paddingLeft="17dp"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="426dp">

                <ImageView
                    android:id="@+id/img_cicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:paddingRight="34dp"
                    android:src="@drawable/mastercard_2" />

                <TextView
                    android:id="@+id/tite_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_toRightOf="@id/img_cicle"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Mastercard"
                    android:textColor="#1b1b1b"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tite_2"
                    android:layout_marginBottom="17dp"
                    android:layout_toRightOf="@id/img_cicle"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="****9889"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/bt_create"
                        android:layout_width="37dp"
                        android:layout_height="71dp"
                        android:background="#003087"
                        android:src="@drawable/create_black_18_dp_2" />

                    <ImageButton

                        android:layout_toRightOf="@id/bt_create"
                        android:layout_width="37dp"
                        android:layout_height="71dp"
                        android:id="@+id/bt_delete"
                        android:background="#025ed7"
                        android:src="@drawable/delete_outline_black_18_dp" />

                    <ImageButton

                        android:id="@+id/bt_close"
                        android:layout_width="37dp"
                        android:layout_height="71dp"
                        android:layout_toRightOf="@+id/bt_delete"
                        android:background="#006eff"
                        android:src="@drawable/ic_baseline_close_24" />
                </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_1"
            android:layout_marginBottom="16dp"
            android:background="@drawable/list_price"
            android:padding="17dp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="501dp">

            <ImageView
                android:id="@+id/img_visa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="34dp"
                android:src="@drawable/img_visa" />

            <TextView
                android:id="@+id/tite_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_visa"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Mastercard"
                android:textColor="#1b1b1b"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@color/bt"
                android:src="@drawable/more_vert_black_18_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tite_2_2"
                android:layout_toRightOf="@id/img_visa"
                android:fontFamily="@font/montserrat_medium"
                android:text="****9889"
                android:textColor="#999999"
                android:textSize="14sp"
                android:textStyle="normal" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_2"
            android:layout_marginBottom="16dp"
            android:background="@drawable/list_price"
            android:padding="17dp"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="576dp">

            <ImageView
                android:id="@+id/img_visa_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="34dp"
                android:src="@drawable/img_visa" />

            <TextView
                android:id="@+id/tite_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_visa_copy"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Mastercard"
                android:textColor="#1b1b1b"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@color/bt"
                android:src="@drawable/more_vert_black_18_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tite_3_2"
                android:layout_toRightOf="@id/img_visa_copy"
                android:fontFamily="@font/montserrat_medium"
                android:text="****9889"
                android:textColor="#999999"
                android:textSize="14sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/row_3"
            android:layout_alignParentRight="true"
            android:background="@drawable/cicle"
            android:src="@drawable/add_black_18_dp"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="566dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

